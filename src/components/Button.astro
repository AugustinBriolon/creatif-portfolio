---
interface Props {
  text: string;
  href: string;
  class?: string;
}

const { class: className, text, href } = Astro.props;

---

<a href={href} rel="noopener noreferrer" target="_blank" class={`group flex items-center justify-center gap-1 rounded-full bg-black text-white px-4 py-3 ${className}`}>
  {text}
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
  stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="rotate-[135deg] group-hover:scale-105 group-hover:translate-x-1 group-hover:-translate-y-1 transition-all">
    <path d="m12 19-7-7 7-7" />
    <path d="M19 12H5" />
  </svg>
</a>
